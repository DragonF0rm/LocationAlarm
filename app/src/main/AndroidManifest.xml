<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sleepless_nights.location_alarm">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".alarm.ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service android:name=".alarm.ui.alarm_service.AlarmService" >
            <intent-filter>
                <action android:name="${applicationId}.dreate_alarm"/>
                <action android:name="${applicationId}.update_alarm"/>
                <action android:name="${applicationId}.delete_alarm"/>
            </intent-filter>
        </service>
    </application>

</manifest>