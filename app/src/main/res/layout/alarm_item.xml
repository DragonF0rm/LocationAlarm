<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/twoLineItemHeight"
    android:layout_row="2"
    android:layout_column="2"
    android:padding="@dimen/twoLineItemPadding">

    <Switch
        android:id="@+id/switch_alarm"
        android:layout_width="0dp"
        android:layout_height="@dimen/alarm_action_height"
        android:layout_row="0"
        android:layout_rowSpan="2"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal"
        android:foregroundGravity="center_vertical|center_horizontal"
        android:textAlignment="center"
        android:visibility="visible" />

    <CheckBox
        android:id="@+id/select_alarm"
        android:layout_width="@dimen/alarm_select_width"
        android:layout_height="@dimen/alarm_action_height"
        android:layout_row="0"
        android:layout_rowSpan="2"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_gravity="center_horizontal|center_vertical"
        android:visibility="gone" />

    <TextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnWeight="5"
        android:layout_gravity="fill_horizontal"
        style="@style/listPrimaryText" />

    <TextView
        android:id="@+id/address"
        android:layout_width="0dp"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnWeight="5"
        android:layout_gravity="fill_horizontal"
        style="@style/listSecondaryText" />

</GridLayout>