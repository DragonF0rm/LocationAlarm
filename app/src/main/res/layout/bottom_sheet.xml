<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:behavior_hideable="false"
    app:behavior_peekHeight="@dimen/twoLineItemHeight"
    app:layout_behavior="@string/bottom_sheet_behavior"
    app:elevation="20dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/twoLineItemHeight"
        android:background="@color/colorPrimary"
        android:paddingStart="@dimen/standardPadding"
        android:paddingEnd="@dimen/standardPadding"
        android:orientation="horizontal"
        android:gravity="start|center"
        >

        <ImageView
            android:id="@+id/sheet_switcher"
            android:layout_width="@dimen/listImageSize"
            android:layout_height="@dimen/listImageSize"
            android:layout_marginEnd="@dimen/standardPadding"
            android:contentDescription="@string/add_new_alarm"
            android:src="@drawable/ic_expand_more_40" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/name_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill_horizontal"
                android:text="@string/add_new_alarm"
                android:textColor="#fff"
                style="@style/listPrimaryText" />

            <TextView
                android:id="@+id/address_header"
                style="@style/listSecondaryText"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_gravity="fill_horizontal"
                android:text="@string/address"
                android:textColor="#fff" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:padding="@dimen/standardPadding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/name"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/name">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:maxLength="40"
                android:text="" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/address"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/standardPadding"
            android:hint="@string/address">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPostalAddress"
                android:maxLength="50"
                android:text="" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

</LinearLayout>
